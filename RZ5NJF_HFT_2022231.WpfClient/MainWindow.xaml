<Window x:Class="RZ5NJF_HFT_2022231.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RZ5NJF_HFT_2022231.WpfClient"
        mc:Ignorable="d"
        Title="Company Editor" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Button Content="Open Company Editor" Command="{Binding OpenCompanyEditorWindowCommand}" Margin="10" Padding="10" />
            <Button Content="Open Phone Editor" Command="{Binding OpenPhoneEditorWindowCommand}" Margin="10" Padding="10" />
            <Button Content="Open Phone OS Editor" Command="{Binding OpenOSEditorWindowCommand}" Margin="10" Padding="10" />
        </StackPanel>
    </Grid>
</Window>
